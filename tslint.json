{
    "extends": ["tslint:latest", "tslint-config-prettier"],
    "rules": {
        "no-string-throw": true,
        "no-unused-expression": true,
        "no-duplicate-variable": true,
        "curly": true,
        "class-name": true,
        "interface-over-type-literal": false,
        "triple-equals": true
    },
    "linterOptions": {
        "ignoreDefinitionFiles": true
    },
    "defaultSeverity": "warning"
}
